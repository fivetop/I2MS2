        </Grid.ColumnDefinitions>
        <Ellipse x:Name="ellipse1"  RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="3" Margin="304.478,220,307.522,0" Grid.RowSpan="2">
            <Ellipse.OpacityMask>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="0.165"/>
