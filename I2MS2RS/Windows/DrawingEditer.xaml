<controls:MetroWindow x:Class="I2MS2.Windows.DrawingEditer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prop="clr-namespace:I2MSR.Properties;assembly=I2MSR"
        xmlns:w="clr-namespace:I2MS2.Windows"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" 
        xmlns:uc="clr-namespace:I2MS2.UserControls"
        xmlns:ucdr="clr-namespace:I2MS2.UserControls.Drawing"
                xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            BorderBrush="{DynamicResource AccentColorBrush}"
            ShowIconOnTitleBar="True"
            ShowTitleBar="True"
            GlowBrush="{DynamicResource AccentColorBrush}"
            NonActiveGlowBrush="#CDFF0000"
            mc:Ignorable="d"
            d:DesignHeight="900"
            d:DesignWidth="600"
            TitlebarHeight="60" 

        Name="_window"
        Title="{x:Static prop:Resources.M9_Drawing_Editor}" Height="910" Width="1280" 
                      WindowStartupLocation="CenterOwner" >
    <Grid>
        <ucdr:DrawingEditControl VerticalAlignment="Top"/>
    </Grid>
</controls:MetroWindow>