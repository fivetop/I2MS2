								MaxDataPointAuto="0"
								MaxDataPointDevide="20"
								SeriesSource="{Binding TerminalSeries}"
								SelectedItem="{Binding SelectedItem, Mode=TwoWay}" 
								Height="Auto"  Width="Auto" ChartTitleVisibility="Collapsed" ChartLegendVisibility="Collapsed">
