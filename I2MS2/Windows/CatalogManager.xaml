                                    <ComboBoxItem Content="FC" Style="{StaticResource I2MS_ComboboxItemStyle}" />
                                    <ComboBoxItem Content="LC" Style="{StaticResource I2MS_ComboboxItemStyle}" />
                                    <ComboBoxItem Content="SC" Style="{StaticResource I2MS_ComboboxItemStyle}" />
