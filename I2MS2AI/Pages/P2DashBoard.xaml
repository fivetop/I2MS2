                                        <ItemsPanelTemplate>
                                            <WrapPanel />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="90"/>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <Border BorderBrush="Black" BorderThickness="3" CornerRadius="5" Margin="5" >
                                                    <Image Source="{Binding Path=dataImages}" Stretch="Fill" Width="72" Height="90" />
                                                </Border>
                                                <Grid Grid.Row="1">
                                                    <TextBlock Text="{Binding Path=dataStrings}" HorizontalAlignment="Center" Foreground="Gray"/>
                                                </Grid>
                                                <Grid Grid.Row="2">
                                                    <TextBlock Text="{Binding Path=datavalue}" FontSize="24" HorizontalAlignment="Center" Foreground="{StaticResource _brushBlue}"/>
                                                </Grid>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                    <ListBox.Background>
                                        <SolidColorBrush Opacity="0.4" Color="#FF292929"/>
                                    </ListBox.Background>
                                </ListBox>
                            </Grid>
                        </UserControls:DB_Panel.child>
