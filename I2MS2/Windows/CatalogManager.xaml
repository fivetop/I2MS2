                                    <Button x:Name="btn_ca_9_2" Content="{x:Static prop:Resources.M9_Catalog_ca_9_2}" Margin="20,0,0,0" Height="20" Style="{DynamicResource I2MS_ButtonStyle}" Click="btn_ca_9_2_Click"/>
