                        </Grid>

                    </Grid>
                </TabItem>
                <TabItem x:Name="_tabRackMount" Header="{x:Static prop:Resources.M9_Catalog_RackMountProperty}" Style="{StaticResource I2MS_TabItemStyle3}">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.6*"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.RowSpan="2">
                            <TextBlock Text="{x:Static prop:Resources.M9_Catalog_rm_1}" Margin="0,0,0,0" Style="{DynamicResource I2MS_TextBlockStyle}"/>
                            <TextBlock Text="{x:Static prop:Resources.M9_Catalog_rm_2}" Margin="0,10,0,0" Style="{DynamicResource I2MS_TextBlockStyle}"/>
                            <TextBlock Text="{x:Static prop:Resources.M9_Catalog_rm_3}" Margin="0,10,0,0" Style="{DynamicResource I2MS_TextBlockStyle}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" >
                            <CheckBox x:Name="chk_rm_1" Margin="0,0,0,0" Height="16" Style="{StaticResource I2MS_CheckBoxStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBox  x:Name="txt_rm_2" Margin="0,7,0,0" Style="{DynamicResource I2MS_TextBoxStyle}" uc:TextHelper.IsNumeric="True" Width="40" HorizontalAlignment="Left" MaxLength="2"/>
                                <TextBlock Text="Fixed Value" Margin="0,10,0,0" Style="{DynamicResource I2MS_TextBlockStyle}" Grid.Column="1" FontWeight="Bold" Foreground="#FFF7DADA"/>
                            </Grid>
                        </StackPanel>
                        <Grid Grid.Row="1" Grid.ColumnSpan="2">
                            <StackPanel Orientation="Vertical" Margin="20,10,0,0">
                                <Button x:Name="_btn_rm_3_1" Content="220 x 20" Margin="0,0,0,0" Height="20" Style="{DynamicResource I2MS_ButtonStyle}" Click="_btn_rm_3_1_Click" HorizontalAlignment="Left"/>
                                <Border Width="220" Height="20" BorderBrush="{StaticResource _brushDarkGray3}" BorderThickness="1" HorizontalAlignment="Left">
                                    <Image x:Name="_img_rm_3_1" Stretch="UniformToFill"/>
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="20,60,0,0">
                                <Button x:Name="_btn_rm_3_2" Content="440 x 40" Margin="0,0,0,0" Height="20" Style="{DynamicResource I2MS_ButtonStyle}" Click="_btn_rm_3_2_Click" HorizontalAlignment="Left"/>
                                <Border Width="440" Height="40" BorderBrush="{StaticResource _brushDarkGray3}" BorderThickness="1" HorizontalAlignment="Left">
                                    <Image x:Name="_img_rm_3_2" Stretch="UniformToFill"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem x:Name="_tabExtended" Header="{x:Static prop:Resources.M9_Catalog_ExtendedProperty}" Style="{StaticResource I2MS_TabItemStyle3}">
                    <Grid Margin="10" >
                        <ListView x:Name="_lvExtended" Style="{StaticResource I2MS_ListViewStyle}" ItemContainerStyle="{StaticResource I2MS_ListViewItemContainerStyle}" >
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Width="0" DisplayMemberBinding="{Binding ext_id}" >
                                        <Border BorderThickness="0" >
                                            <TextBlock Text="ID" Style="{StaticResource I2MS_ListViewColHeaderText}" />
                                        </Border>
                                    </GridViewColumn>
                                    <GridViewColumn Width="180" DisplayMemberBinding="{Binding ext_name}" >
                                        <Border BorderThickness="0" >
                                            <TextBlock Text="{x:Static prop:Resources.M9_Catalog_ep_1}" Style="{StaticResource I2MS_ListViewColHeaderText}" />
                                        </Border>
                                    </GridViewColumn>
                                    <GridViewColumn Width="50" DisplayMemberBinding="{Binding ext_length}" >
                                        <Border BorderThickness="0" >
                                            <TextBlock Text="{x:Static prop:Resources.M9_Catalog_ep_2}" Style="{StaticResource I2MS_ListViewColHeaderText}" />
                                        </Border>
                                    </GridViewColumn>
                                    <GridViewColumn Width="80" DisplayMemberBinding="{Binding ext_type}" >
                                        <Border BorderThickness="0" >
                                            <TextBlock Text="{x:Static prop:Resources.M9_Catalog_ep_3}" Style="{StaticResource I2MS_ListViewColHeaderText}" />
                                        </Border>
                                    </GridViewColumn>
                                    <GridViewColumn Width="140" DisplayMemberBinding="{Binding remarks}" >
                                        <Border BorderThickness="0" >
                                            <TextBlock Text="{x:Static prop:Resources.M9_Catalog_ep_4}" Style="{StaticResource I2MS_ListViewColHeaderText}" />
                                        </Border>
                                    </GridViewColumn>
                                    <GridViewColumn Width="60">
                                        <TextBlock Text="{x:Static prop:Resources.C_Select}" Style="{StaticResource I2MS_ListViewColHeaderText}"></TextBlock>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid >
                                                    <CheckBox x:Name="_chkView" Style="{StaticResource I2MS_CheckBoxStyle}" 
                                                              IsChecked="{Binding is_checked}" Width="24" Height="14" HorizontalAlignment="center" >
                                                    </CheckBox>
                                                </Grid>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </TabItem>
                <!--소속된 자산-->
                <TabItem x:Name="_tabAssetList" Header="{x:Static prop:Resources.M9_Catalog_AssetList}" Style="{StaticResource I2MS_TabItemStyle3}">
                    <Grid Margin="10" >
                        <StackPanel Orientation="Horizontal" Height="24" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,0,0,0">
                            <RadioButton x:Name="_rdoSite1" Content="{x:Static prop:Resources.M9_Catalog_AssetList2}" Style="{StaticResource I2MS_RadioButtonStyle}" Width="100" IsChecked="True" Checked="_rdoSite1_Checked" Unchecked="_rdoSite1_Unchecked"/>
                            <RadioButton x:Name="_rdoSite2" Content="{x:Static prop:Resources.M9_Catalog_AssetList3}" Style="{StaticResource I2MS_RadioButtonStyle}" Checked="_rdoSite2_Checked" Unchecked="_rdoSite2_Unchecked"/>
                        </StackPanel>
                        <ListView x:Name="_lvAssetList" Style="{StaticResource I2MS_ListViewStyle}" ItemContainerStyle="{StaticResource I2MS_ListViewItemContainerStyle}" Margin="0,30,0,0">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Width="90" DisplayMemberBinding="{Binding site_name}" >
                                        <Border BorderThickness="0" >
                                            <TextBlock Text="{x:Static prop:Resources.C_Site}" Style="{StaticResource I2MS_ListViewColHeaderText}" />
                                        </Border>
                                    </GridViewColumn>
                                    <GridViewColumn Width="90" DisplayMemberBinding="{Binding building_name}" >
                                        <Border BorderThickness="0" >
                                            <TextBlock Text="{x:Static prop:Resources.C_Building}" Style="{StaticResource I2MS_ListViewColHeaderText}" />
                                        </Border>
                                    </GridViewColumn>
                                    <GridViewColumn Width="40" DisplayMemberBinding="{Binding floor_name}" >
                                        <Border BorderThickness="0" >
                                            <TextBlock Text="{x:Static prop:Resources.C_Floor}" Style="{StaticResource I2MS_ListViewColHeaderText}" />
                                        </Border>
                                    </GridViewColumn>
                                    <GridViewColumn Width="70" DisplayMemberBinding="{Binding room_name}" >
                                        <Border BorderThickness="0" >
                                            <TextBlock Text="{x:Static prop:Resources.C_Room}" Style="{StaticResource I2MS_ListViewColHeaderText}" />
                                        </Border>
                                    </GridViewColumn>
                                    <GridViewColumn Width="70" DisplayMemberBinding="{Binding rack_name}" >
                                        <Border BorderThickness="0" >
                                            <TextBlock Text="{x:Static prop:Resources.C_Rack}" Style="{StaticResource I2MS_ListViewColHeaderText}" />
                                        </Border>
                                    </GridViewColumn>
                                    <GridViewColumn Width="120" DisplayMemberBinding="{Binding disp_name}" >
                                        <Border BorderThickness="0" >
                                            <TextBlock Text="{x:Static prop:Resources.C_Asset_Name}" Style="{StaticResource I2MS_ListViewColHeaderText}" />
                                        </Border>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </TabItem>

            </TabControl>
        </Grid>

        <!--아래 버튼-->
        <StackPanel Orientation="Horizontal" Margin="10,10,10,10" Height="30" Grid.Row="4" Grid.Column="1">
            <Button x:Name="_btnNew" Content="{x:Static prop:Resources.C_New}"  Margin="0,0,6,0" Style="{StaticResource I2MS_ButtonStyle}" 
                    Command="{x:Static iw:CatalogManager.NewCommand}"/>
            <Button x:Name="_btnDelete" Content="{x:Static prop:Resources.C_Delete}" Margin="0,0,6,0" Style="{StaticResource I2MS_ButtonStyle}"  
                    Command="{x:Static iw:CatalogManager.DeleteCommand}"/>
            <Button x:Name="_btnEdit" Content="{x:Static prop:Resources.C_Edit}"  Margin="0,0,6,0" Style="{StaticResource I2MS_ButtonStyle}" 
                    Command="{x:Static iw:CatalogManager.EditCommand}"/>
            <Button x:Name="_btnSave" Content="{x:Static prop:Resources.C_Save}"  Margin="0,0,6,0" Style="{StaticResource I2MS_ButtonStyle}" 
                    Command="{x:Static iw:CatalogManager.SaveCommand}"/>
            <Button x:Name="_btnCancel" Content="{x:Static prop:Resources.C_Cancel}"  Margin="0,0,6,0" Style="{StaticResource I2MS_ButtonStyle}" 
                    Command="{x:Static iw:CatalogManager.CancelCommand}"/>
        </StackPanel>

    </Grid>
</Window>
