                                    <ComboBoxItem Content="OM(Optical Multi mode)-2" Style="{StaticResource I2MS_ComboboxItemStyle}" />
                                    <ComboBoxItem Content="OM(Optical Multi mode)-3" Style="{StaticResource I2MS_ComboboxItemStyle}" />
                                    <ComboBoxItem Content="OM(Optical Multi mode)-4" Style="{StaticResource I2MS_ComboboxItemStyle}" />
