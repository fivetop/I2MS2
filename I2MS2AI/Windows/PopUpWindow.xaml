<Window x:Class="I2MS2.Windows.PopUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SimpleWin v2.0" Height="200" Width="300"
        Name="_window" Style="{StaticResource I2MS_PopUpWindowStyle}" WindowStartupLocation="CenterScreen" Cursor="Hand" Icon="/I2MS2;component/Images/LSlogo.jpg">
    <Grid>
        <TextBlock Name="_txtPopUp"  Text="PopUpWindow" Style="{StaticResource I2MS_TextBlockStyle3}" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Image Source="/I2MS2;component/intelligent.ico" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="None"/>
    </Grid>
</Window>
