        <Image x:Name="_1_png" Source="/I2MS2;component/Images/1.png"  RenderTransformOrigin="0.5,0.5" Opacity="0.6" MouseDown="_1_png_MouseDown" Grid.Column="1" Grid.Row="1" Stretch="None">
