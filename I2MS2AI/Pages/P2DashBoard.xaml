												    DisplayMember="category"
												    ValueMember="value"
												    ItemsSource="{Binding SystemSwitchStatus}"/>
                                            </chart:RadialGaugeChart.Series>
                                        </chart:RadialGaugeChart>
                                    </Grid>
                                </Grid>
                            </StackPanel>
                        </UserControls:DB_Panel.child>
                    </UserControls:DB_Panel>

