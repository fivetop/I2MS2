                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
        <MediaElement x:Name="sp" Visibility="Visible" Source="pack://siteoforigin:,,,/al.wav" UnloadedBehavior="Manual" Stretch="Fill" Volume="1" LoadedBehavior="Manual" />
    </Grid>
</Window>
